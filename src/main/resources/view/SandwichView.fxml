<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox spacing="15.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.controller.SandwichViewController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label text="Order Sandwich">
        <font>
            <Font name="System Bold" size="24.0"/>
        </font>
    </Label>

    <HBox spacing="20.0">
        <VBox spacing="10.0" HBox.hgrow="ALWAYS">
            <Label text="Protein:">
                <font>
                    <Font size="14.0"/>
                </font>
            </Label>
            <ComboBox fx:id="proteinComboBox" prefWidth="200" onAction="#updatePrice"/>

            <Label text="Bread:">
                <font>
                    <Font size="14.0"/>
                </font>
            </Label>
            <ComboBox fx:id="breadComboBox" prefWidth="200" onAction="#updatePrice"/>

            <Label text="Add-Ons:">
                <font>
                    <Font size="14.0"/>
                </font>
            </Label>
            <CheckBox fx:id="cheeseCheckBox" text="Cheese (+$1.00)" onAction="#updatePrice"/>
            <CheckBox fx:id="lettuceCheckBox" text="Lettuce (+$0.30)" onAction="#updatePrice"/>
            <CheckBox fx:id="tomatoesCheckBox" text="Tomatoes (+$0.30)" onAction="#updatePrice"/>
            <CheckBox fx:id="onionsCheckBox" text="Onions (+$0.30)" onAction="#updatePrice"/>

            <Label text="Quantity:">
                <font>
                    <Font size="14.0"/>
                </font>
            </Label>
            <Spinner fx:id="quantitySpinner" prefWidth="200" editable="true"/>

            <Label fx:id="priceLabel" text="Price: $0.00">
                <font>
                    <Font name="System Bold" size="16.0"/>
                </font>
            </Label>

            <HBox spacing="10.0">
                <Button text="Add to Order" onAction="#onAddToOrder" prefWidth="120"/>
                <Button text="Close" onAction="#onClose" prefWidth="120"/>
            </HBox>

            <Label fx:id="statusLabel" text="" textFill="GREEN">
                <font>
                    <Font size="12.0"/>
                </font>
            </Label>
        </VBox>

        <VBox alignment="CENTER">
            <ImageView fx:id="sandwichImageView" fitHeight="250" fitWidth="250" preserveRatio="true"/>
        </VBox>
    </HBox>
</VBox>
